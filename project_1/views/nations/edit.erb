<div class= "green_gradient">
  <div id = "nations_background_image">

    <div class= "pages">

    <div class="page_headers">Edit <%= @nation.name %></div>

    <div class="page_box">

      <form action="/nations/<%= @nation.id %>" method="post">

        <input type="hidden" name="_method" value="put">

        <label for="name" class= "box_content_blue">School name:</label>
        <input type="text" name="name" value="<%= @nation.name %>" id= "text_box">
        
        <div class= "save_button_container">
        <input type='submit' value="Update school" id="save_button">
        </div>
      </form>

      </div>

    </div>
  </div>
</div>